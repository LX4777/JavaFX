<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.paint.presentation.PaintController">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Файл">
                    <MenuItem onAction="#onSnapshot" text="Скриншот" />
                    <MenuItem onAction="#onExit" text="Выход" />
                </Menu>
            </MenuBar>
            <ToolBar prefHeight="0.0" prefWidth="600.0">
                <HBox alignment="CENTER" spacing="5">
                    <TextField fx:id="brushSize" text="3" />
                    <ColorPicker fx:id="colorPicker" />
                    <CheckBox fx:id="eraser" text="Резинка" />
                </HBox>
            <CheckBox fx:id="pencil" mnemonicParsing="false" text="Карандаш" />
            <ChoiceBox fx:id="shapesSelect" prefWidth="150.0" />
            </ToolBar>
        </VBox>
    </top>
    <center>
        <Canvas fx:id="canvas" height="600" width="838.0" />
    </center>
</BorderPane>
