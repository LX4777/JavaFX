<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="600" prefWidth="732.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.paint.presentation.MorphController">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Файл">
                    <MenuItem onAction="#onExit" text="Выход"/>
                </Menu>
            </MenuBar>
            <ToolBar prefHeight="0.0" prefWidth="600.0">
                <HBox alignment="CENTER" spacing="5">
                    <ColorPicker fx:id="colorPicker"/>
                    <ChoiceBox fx:id="shapesSelect" prefWidth="150.0"/>
                    <ChoiceBox fx:id="morphShapesSelect" prefWidth="150.0"/>
                    <Button fx:id="startMorphButton" mnemonicParsing="false" text="Старт"/>
                </HBox>
            </ToolBar>
        </VBox>
    </top>
    <center>
        <Pane fx:id="pane" prefHeight="537.0" prefWidth="690.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
